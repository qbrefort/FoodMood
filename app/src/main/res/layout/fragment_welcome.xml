<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WelcomeActivity$PlaceholderFragment"
    android:id="@+id/twelcome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:theme="@style/AppTheme"
        style="@style/AppTheme">

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/textViewWelcome"
            android:text="Welcome !"
            android:textSize="30dp"
            emojicon:emojiconSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:theme="@style/AppTheme" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:theme="@style/AppTheme"
            style="@style/AppTheme">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                style="@style/AppTheme">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    style="@style/AppTheme">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:hint="Your Name"
                        android:id="@+id/editTextName"
                        android:layout_weight="1"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:theme="@style/AppTheme"
                    style="@style/AppTheme">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size :"
                        android:id="@+id/textView11"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />

                    <EditText
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editTextSize"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    style="@style/AppTheme">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Sex :"
                        android:id="@+id/textView12"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/RadioGroupSex"
                        android:orientation="horizontal"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme">


                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:id="@+id/RadioButtonM"
                            android:checked="false"
                            android:theme="@style/AppTheme"
                            style="@style/AppTheme" />

                        />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:id="@+id/RadioButtonF"
                            android:checked="false"
                            android:theme="@style/AppTheme"
                            style="@style/AppTheme" />

                        />
                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    style="@style/AppTheme">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age : "
                        android:id="@+id/textView13"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                            android:id="@+id/editTextAge"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                style="@style/AppTheme">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    style="@style/AppTheme">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kcal/day sugg.: "
                        android:id="@+id/textView7"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />

                    <EditText
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:theme="@style/AppTheme"
                        style="@style/AppTheme" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    android:id="@+id/LayoutFoodPick"
                    style="@style/AppTheme">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextViewFoodPick"
                        android:textStyle="normal"
                        android:text="Your diet picks : "
                        style="@style/AppTheme"
                        android:theme="@style/AppTheme" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextViewFoodPick1"
                        android:textStyle="normal"
                        android:text=""
                        style="@style/AppTheme"
                        android:theme="@style/AppTheme" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextViewFoodPick2"
                        android:textStyle="normal"
                        android:text=""
                        style="@style/AppTheme"
                        android:theme="@style/AppTheme" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextViewFoodPick3"
                        android:textStyle="normal"
                        android:text=""
                        style="@style/AppTheme"
                        android:theme="@style/AppTheme" />


                </LinearLayout>
                <LinearLayout
                    style="@style/AppTheme"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:theme="@style/AppTheme"
                    android:id="@+id/linearLayoutFood" >

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewProfile"
            />

        <Button
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:id="@+id/buttonUpdateProfile"
            android:theme="@style/AppTheme" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How do you feel today ?"
            android:id="@+id/buttonSendFeel"
            android:theme="@style/AppTheme"
            style="@style/AppTheme" />
    </LinearLayout>
</RelativeLayout>
